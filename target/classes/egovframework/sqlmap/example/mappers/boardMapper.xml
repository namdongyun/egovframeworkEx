<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="ex.board.service.BoardMapper">
	<select id="loadBoard" resultType="ex.board.vo.BoardVO">
		SELECT * FROM board
	</select>
	
	<insert id="createBoard" parameterType="ex.board.vo.BoardVO">
		INSERT INTO board (title, content, name, date)
		VALUES (#{title}, #{content}, #{name}, NOW())
	</insert>
</mapper>